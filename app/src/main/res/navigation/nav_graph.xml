<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.aharui.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_scanFood"
            app:destination="@id/navigation_scan_food" />
        <action
            android:id="@+id/action_home_to_rewards"
            app:destination="@id/navigation_rewards" />
    </fragment>

    <fragment
        android:id="@+id/navigation_diet"
        android:name="com.example.aharui.ui.diet.DietFragment"
        android:label="fragment_diet"
        tools:layout="@layout/fragment_diet">
        <action
            android:id="@+id/action_diet_to_scanFood"
            app:destination="@id/navigation_scan_food" />
        <action
            android:id="@+id/action_diet_to_rewards"
            app:destination="@id/navigation_rewards" />
        <!-- ADD THIS -->
        <action
            android:id="@+id/action_diet_to_profile"
            app:destination="@id/navigation_profile" />

    </fragment>

    <fragment
        android:id="@+id/navigation_maps"
        android:name="com.example.aharui.ui.maps.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.aharui.ui.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profile_to_editProfile"
            app:destination="@id/navigation_edit_profile" />
        <action
            android:id="@+id/action_profile_to_rewards"
            app:destination="@id/navigation_rewards" />
    </fragment>

    <fragment
        android:id="@+id/navigation_edit_profile"
        android:name="com.example.aharui.ui.profile.EditProfileFragment"
        android:label="fragment_edit_profile"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/navigation_rewards"
        android:name="com.example.aharui.ui.profile.RewardsFragment"
        android:label="fragment_rewards"
        tools:layout="@layout/fragment_rewards" />

    <fragment
        android:id="@+id/navigation_scan_food"
        android:name="com.example.aharui.ui.diet.ScanFoodFragment"
        android:label="fragment_scan_food"
        tools:layout="@layout/fragment_scan_food" />

</navigation>