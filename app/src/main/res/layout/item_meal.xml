<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section with Gradient Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="?attr/colorSurfaceVariant"
            android:padding="12dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/meal_type_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="BREAKFAST ðŸ¤–"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                android:letterSpacing="0.1"
                tools:text="BREAKFAST ðŸ¤–" />

            <com.google.android.material.chip.Chip
                android:id="@+id/calories_chip"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="350 kcal"
                android:textSize="12sp"
                android:textStyle="bold"
                app:chipBackgroundColor="?attr/colorPrimary"
                app:chipStrokeWidth="0dp"
                android:textColor="?attr/colorOnPrimary"
                app:chipMinHeight="28dp"
                tools:text="350 kcal" />

        </LinearLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Food Name -->
            <TextView
                android:id="@+id/food_name_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oatmeal with Berries"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="12dp"
                tools:text="Grilled Chicken Salad with Quinoa" />

            <!-- Macros Section with Icons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Protein -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="#FF6B6B"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/protein_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P: 12g"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="P: 12g" />

                </LinearLayout>

                <!-- Carbs -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="#4ECDC4"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/carbs_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C: 55g"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="C: 55g" />

                </LinearLayout>

                <!-- Fat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/circle_shape"
                        android:backgroundTint="#FFD93D"
                        android:layout_marginEnd="6dp" />

                    <TextView
                        android:id="@+id/fat_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F: 10g"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"
                        tools:text="F: 10g" />

                </LinearLayout>

            </LinearLayout>

            <!-- Legacy macros textview (hidden, kept for compatibility) -->
            <TextView
                android:id="@+id/macros_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:text="P: 12g | C: 55g | F: 10g" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>