<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/badge_imageview"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_rewards"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/badge_name_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Badge Name"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/badge_imageview"
        app:layout_constraintTop_toTopOf="@+id/badge_imageview" />

    <TextView
        android:id="@+id/badge_description_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A short description of how this badge was earned."
        app:layout_constraintEnd_toEndOf="@+id/badge_name_textview"
        app:layout_constraintStart_toStartOf="@+id/badge_name_textview"
        app:layout_constraintTop_toBottomOf="@+id/badge_name_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>