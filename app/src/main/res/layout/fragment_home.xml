<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_light">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        tools:context=".ui.home.HomeFragment">

        <!-- Greeting Section with improved typography -->
        <TextView
            android:id="@+id/greeting_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Hi, User"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="Track your health journey"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/greeting_textview" />

        <!-- Weight Progress Chart Card with elevation -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/chart_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_textview">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight Progress"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <com.example.aharui.ui.home.LineGraphView
                    android:id="@+id/weight_progress_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chart_filter_chip_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    app:singleSelection="true"
                    app:chipSpacingHorizontal="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/weekly_chip"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Week"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/monthly_chip"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/six_months_chip"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6 Months"
                        android:textColor="@color/chip_text_color"
                        app:chipBackgroundColor="@color/chip_background_color" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Log Weight Button - Outlined style -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/log_weight_button"
            style="@style/Widget.Material3.Button.OutlinedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Log Weight"
            android:textSize="14sp"
            app:icon="@drawable/ic_add"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:cornerRadius="12dp"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chart_card" />

        <!-- Daily Stats Section Title -->
        <TextView
            android:id="@+id/daily_stats_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Today's Stats"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/log_weight_button" />

        <!-- Water Intake Card - Redesigned -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/water_intake_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/card_water_background"
            app:layout_constraintEnd_toStartOf="@+id/calories_summary_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daily_stats_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_water_drop"
                    android:tint="@color/water_accent"
                    android:contentDescription="Water icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Water Intake"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/water_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="500 / 2500 ml"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <ProgressBar
                    android:id="@+id/water_progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="12dp"
                    android:max="2500"
                    android:progress="500"
                    android:progressTint="@color/water_accent"
                    android:progressBackgroundTint="@color/progress_background" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Calories Card - Redesigned -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/calories_summary_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:cardBackgroundColor="@color/card_calories_background"
            app:layout_constraintBottom_toBottomOf="@+id/water_intake_card"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/water_intake_card"
            app:layout_constraintTop_toTopOf="@+id/water_intake_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="20dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_restaurant"
                    android:tint="@color/calories_accent"
                    android:contentDescription="Calories icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Calories"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/calories_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="1200 / 2000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kcal"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Quick Actions Section Title -->
        <TextView
            android:id="@+id/quick_actions_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="28dp"
            android:text="Quick Actions"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/water_intake_card" />

        <!-- Action Buttons - Improved Grid Layout -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/log_water_button"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Log Water"
            android:textSize="14sp"
            app:icon="@drawable/ic_water_drop"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/water_accent"
            app:cornerRadius="12dp"
            app:elevation="1dp"
            app:layout_constraintEnd_toStartOf="@+id/scan_food_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/quick_actions_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/scan_food_button"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Scan Food"
            android:textSize="14sp"
            app:icon="@drawable/ic_camera"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/calories_accent"
            app:cornerRadius="12dp"
            app:elevation="1dp"
            app:layout_constraintEnd_toStartOf="@+id/view_plan_button"
            app:layout_constraintStart_toEndOf="@+id/log_water_button"
            app:layout_constraintTop_toTopOf="@+id/log_water_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_plan_button"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:text="View Plan"
            android:textSize="14sp"
            app:icon="@drawable/ic_list"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="@color/colorPrimary"
            app:cornerRadius="12dp"
            app:elevation="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/scan_food_button"
            app:layout_constraintTop_toTopOf="@+id/log_water_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>